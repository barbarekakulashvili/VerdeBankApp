<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="514.0" prefWidth="561.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankisaplikacia1.CardFreeze">
   <children>
      <AnchorPane prefHeight="517.0" prefWidth="562.0" style="-fx-background-color: #c8e6e2;">
         <children>
            <Label fx:id="mainLabel" layoutX="92.0" layoutY="30.0" text="LOCK YOUR CREDIT CARD" textFill="#0a4c53">
               <font>
                  <Font name="Tahoma Bold" size="30.0" />
               </font>
            </Label>
            <TextField fx:id="usernameTextField" layoutX="152.0" layoutY="99.0" prefHeight="40.0" prefWidth="262.0" promptText="Username" />
            <Label fx:id="questionLabel" layoutX="62.0" layoutY="308.0" prefHeight="27.0" prefWidth="274.0" text="Are you sure you want to lock your card?" textFill="#0a4c53">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <CheckBox fx:id="sureCheckBox" layoutX="356.0" layoutY="312.0" mnemonicParsing="false" onAction="#sureCheckBoxMethod" text="Yes, I am sure." textFill="#0a4c53">
               <font>
                  <Font size="13.0" />
               </font>
            </CheckBox>
            <Button fx:id="backButton" layoutX="14.0" layoutY="458.0" mnemonicParsing="false" onAction="#CardFreezeToMainMenu" prefHeight="34.0" prefWidth="78.0" style="-fx-background-color: #9ed5d1;" text="&lt;- Back" textFill="#0a4c53" />
            <Button fx:id="freezeButton" layoutX="246.0" layoutY="405.0" mnemonicParsing="false" onAction="#freezeMethod" prefHeight="34.0" prefWidth="87.0" style="-fx-background-color: #9ed5d1;" text="Lock" textFill="#0a4c53" />
            <PasswordField fx:id="passwordTextField" layoutX="152.0" layoutY="158.0" prefHeight="40.0" prefWidth="262.0" promptText="Password" />
            <PasswordField fx:id="pinCodeTextField" layoutX="152.0" layoutY="227.0" prefHeight="40.0" prefWidth="262.0" promptText="PIN" />
            <CheckBox fx:id="showPassword" layoutX="151.0" layoutY="198.0" mnemonicParsing="false" onAction="#passwordVisibility" text="Show password" textFill="#0a4c53">
               <font>
                  <Font size="11.0" />
               </font>
            </CheckBox>
            <CheckBox fx:id="showPinCode" layoutX="153.0" layoutY="267.0" mnemonicParsing="false" onAction="#pinCodeVisibility" text="Show pin code" textFill="#0a4c53">
               <font>
                  <Font size="11.0" />
               </font>
            </CheckBox>
            <TextField fx:id="visiblePassword" layoutX="152.0" layoutY="158.0" prefHeight="40.0" prefWidth="262.0" promptText="Password" />
            <TextField fx:id="visiblePinCode" layoutX="152.0" layoutY="227.0" prefHeight="40.0" prefWidth="262.0" promptText="PIN" />
            <Label fx:id="errorLabel" layoutX="153.0" layoutY="354.0" textFill="#990303">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
